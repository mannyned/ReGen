{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=4096"
    }
  },
  "crons": [
    {
      "path": "/api/cron/scheduled-posts",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/subscription-reminders",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/rss-ingestion",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/analytics-sync",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/blog-auto-share",
      "schedule": "*/15 * * * *"
    }
  ]
}
