# Server Configuration
PORT=3000
NODE_ENV=development
OAUTH_REDIRECT_BASE_URL=http://localhost:3000

# Security
TOKEN_ENCRYPTION_KEY=change-this-to-a-secure-random-key-in-production

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# AWS S3 Configuration (Optional)
S3_BUCKET=your-bucket-name
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1

# Instagram OAuth (via Facebook)
# Get credentials at: https://developers.facebook.com/apps
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret

# Twitter/X OAuth 2.0
# Get credentials at: https://developer.twitter.com/en/portal/dashboard
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret

# LinkedIn OAuth
# Get credentials at: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Facebook OAuth
# Get credentials at: https://developers.facebook.com/apps
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

# TikTok OAuth
# Get credentials at: https://developers.tiktok.com/
TIKTOK_CLIENT_ID=your-tiktok-client-id
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret

# YouTube OAuth (via Google)
# Get credentials at: https://console.developers.google.com/
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret
