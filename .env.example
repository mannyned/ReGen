# ============================================
# ReGenr - Environment Variables Template
# Copy this file to .env.local and fill in your values
# ============================================

# ============================================
# APP CONFIGURATION
# ============================================
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NODE_ENV=development

# ============================================
# DATABASE (PostgreSQL for production)
# ============================================
DATABASE_URL="postgresql://user:password@localhost:5432/regen?schema=public"

# ============================================
# SECURITY
# ============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
TOKEN_ENCRYPTION_KEY=your-64-character-hex-string-here

# ============================================
# INSTAGRAM (via Facebook Graph API)
# https://developers.facebook.com/apps
# ============================================
INSTAGRAM_CLIENT_ID=
INSTAGRAM_CLIENT_SECRET=

# ============================================
# TIKTOK
# https://developers.tiktok.com/
# ============================================
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=

# ============================================
# YOUTUBE (Google Cloud Console)
# https://console.cloud.google.com/
# ============================================
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=

# ============================================
# TWITTER / X
# https://developer.twitter.com/
# ============================================
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=

# ============================================
# LINKEDIN
# https://www.linkedin.com/developers/
# ============================================
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# ============================================
# FACEBOOK
# https://developers.facebook.com/apps
# ============================================
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# ============================================
# SNAPCHAT
# https://business.snapchat.com/
# ============================================
SNAPCHAT_CLIENT_ID=
SNAPCHAT_CLIENT_SECRET=

# ============================================
# AI / OPENAI
# https://platform.openai.com/api-keys
# ============================================
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# FILE STORAGE (Optional - for media uploads)
# ============================================
# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=regen-uploads

# ============================================
# REDIS (Optional - for rate limiting & sessions in production)
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# WEBHOOKS (Optional - for platform callbacks)
# ============================================
WEBHOOK_SECRET=your-webhook-secret
